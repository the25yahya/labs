# Use PHP with Apache
FROM php:8.1-apache

# Install SQLite and required PHP extensions
RUN apt-get update && \
    apt-get install -y libsqlite3-dev && \
    docker-php-ext-install pdo_sqlite sqlite3

# Copy the source files to the web root
COPY src/ /var/www/html/

# Expose port 80 for the web server
EXPOSE 80
